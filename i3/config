# Set mod key to Super
set $mod Mod4

# Font
font pango:JetBrains Mono 10

# Define TokyoNight colors manually (since set_from_resource isn't available)
set $bg-color        #1a1b26
set $inactive-color  #292e42
set $text-color      #a9b1d6
set $accent          #7aa2f7
set $urgent-color    #f7768e

# Gaps
 gaps inner 2
 gaps outer 2

# Remove window titles
default_border pixel 0
default_floating_border pixel 0

# Startup programs
exec --no-startup-id dbus-launch nm-applet
# exec --no-startup-id nm-applet
exec --no-startup-id volumeicon
	exec --no-startup-id feh --bg-scale ~/Pictures/wallpapers/wall1/cafe-at-night.png
exec --no-startup-id dunst
# Uncomment if you want blueman or ulauncher:
exec --no-startup-id blueman-applet
exec --no-startup-id greenclip daemon
# exec --no-startup-id ulauncher-toggle

# Keybindings
bindsym $mod+Return exec alacritty
bindsym $mod+e exec nemo
bindsym $mod+b exec ~/Downloads/zen/zen
bindsym $mod+d exec rofi -show drun -theme tokyonight.rasi
bindsym $mod+c exec ~/dotfiles/rofi/rofi-greenclip.sh
bindsym $mod+w kill
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exit
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+space floating toggle

# Window focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move window
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Splitting
bindsym $mod+h split h
bindsym $mod+v split v

# Auto-alternating split orientation based on window dimensions
default_orientation vertical
for_window [class=".*"] split toggle

# Workspaces
set $ws1 1
set $ws2 2
set $ws3 3
set $ws4 4
set $ws5 5

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5

bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5

## Screenshots
bindsym Print exec --no-startup-id maim "/home/$USER/Pictures/$(date)"
bindsym $mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "/home/$USER/Pictures/$(date)"
bindsym Shift+Print exec --no-startup-id maim --select "/home/$USER/Pictures/$(date)"

## Clipboard Screenshots
bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
bindsym Ctrl+$mod+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png


